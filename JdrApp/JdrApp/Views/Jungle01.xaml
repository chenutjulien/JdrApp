                <StackLayout Grid.Row="1" Grid.ColumnSpan="2" x:Name="BlocHistoire" IsVisible="false" Padding="10"> <!-- Bloc Histoire -->
                    <Label Text=""
                           x:Name="Histoire"
                           VerticalOptions="CenterAndExpand" 
                           HorizontalOptions="CenterAndExpand"
                           HorizontalTextAlignment="Center"
                           FontAttributes="Bold"
                           TextColor="AntiqueWhite"
                           FontSize="Medium"
                           FontFamily="PhiloBI"/>
                </StackLayout>
                <StackLayout Grid.Row="1" Grid.ColumnSpan="2" x:Name="BlocTitreChoixAvatar" IsVisible="true"> <!-- Bloc Titre Choix Avatar -->
                    <Label Text="Choississez votre avatar"
                           x:Name="TitreChoixPerso"
                           VerticalOptions="CenterAndExpand" 
                           HorizontalOptions="CenterAndExpand"
                           FontAttributes="Bold"
                           TextColor="AntiqueWhite"
                           FontSize="Medium"
                           FontFamily="PhiloBI"/>
                </StackLayout>
                <StackLayout Grid.Column="0" Grid.Row="2" x:Name="BlocChoixAvatar" Padding="15" VerticalOptions="Fill"> <!-- Bloc Choix Avatar -->
                    <RadioButton x:Name="Avatar01"
                                 Value="Justicier"
                                 Content="Justicier"
                                 TextColor="AntiqueWhite"
                                 FontSize="Medium"
                                 FontFamily="PhiloR"
                                 Padding="5"
                                 CheckedChanged="ChoisirJusticier"/>
                    <RadioButton x:Name="Avatar02"
                                 Value="Pretre"
                                 Content="Prêtre"
                                 TextColor="AntiqueWhite"
                                 FontSize="Medium"
                                 FontFamily="PhiloR"
                                 Padding="5"
                                 CheckedChanged="ChoisirPretre"/>
                    <RadioButton x:Name="Avatar03"
                                 Value="Archer"
                                 Content="Archer"
                                 TextColor="AntiqueWhite"
                                 FontSize="Medium"
                                 FontFamily="PhiloR"
                                 Padding="5"
                                 CheckedChanged="ChoisirArcher"/>
                    <Label Text="Vous avez choisi"
                           x:Name="ChoixAvatar"
                           TextColor="AntiqueWhite"
                           FontSize="Medium"
                           FontFamily="PhiloR"
                           Padding="10"/>
                </StackLayout>
                <StackLayout Grid.Column="1" Grid.Row="2" x:Name="BlocExplicationAvatar"> <!-- Bloc Explication Avatar -->
                    <Label Text=""
                           x:Name="ExplicationAvatar"
                           VerticalOptions="StartAndExpand"
                           TextColor="AntiqueWhite"
                           FontSize="Medium"
                           FontFamily="PhiloR"
                           Margin="0,10"/>
                </StackLayout>
                    <Label Grid.ColumnSpan="2" Grid.Row="4" IsVisible="false"
                           TextColor="AntiqueWhite"
                           FontSize="Medium"
                           FontFamily="PhiloR"
                           Padding="5"
                           VerticalOptions="End"
                           x:Name="ResultatDe"/>
                <StackLayout Grid.ColumnSpan="2" Grid.Row="3" x:Name="DebuterAventure" VerticalOptions="End"> <!-- Bloc Débuter Aventure -->
                    <Button Text="Commencer l'aventure"
                            BackgroundColor="Transparent"
                            TextColor="PowderBlue"
                            Clicked="DebuterAventureClicked"/>
                </StackLayout>
                <StackLayout Grid.Column="0" Grid.Row="4" VerticalOptions="EndAndExpand">
                </StackLayout>
                <StackLayout Grid.Column="1" Grid.Row="4" VerticalOptions="EndAndExpand">
                </StackLayout>
                <Button Text="Faire un prodige !"
                            FontFamily="PhiloR" TextColor="PowderBlue"
                            BackgroundColor="Transparent"
                            Clicked="ActionButtonProdigeClicked"
                            Grid.ColumnSpan="2" Grid.Row="3" x:Name="ActionButtonProdige" IsVisible="false"/>
                <!-- ******** Action 01 ******** 01-->
                <Button Text="Fouiller la maison"
                            FontFamily="PhiloR" TextColor="PowderBlue"
                            BackgroundColor="Transparent"
                            Clicked="ActionButton01AClicked"
                            Grid.Column="0" Grid.Row="3" x:Name="ActionButton01A" IsVisible="false"/>
                <Button Text="Aller au village"
                            FontFamily="PhiloR" TextColor="PowderBlue"
                            Clicked="ActionButton01BClicked"
                            BackgroundColor="Transparent"
                            Grid.Column="1" Grid.Row="3" x:Name="ActionButton01B" IsVisible="false"/>
                <!-- ******** Action 02 ******** 02-->
                <Button Text="Suivre les traces"
                            FontFamily="PhiloR" TextColor="PowderBlue"
                            BackgroundColor="Transparent"
                            Clicked="ActionButton02AClicked"
                            Grid.Column="0" Grid.Row="3" x:Name="ActionButton02A" IsVisible="false"/>
                <Button Text="Enterrer le serviteur"
                            FontFamily="PhiloR" TextColor="PowderBlue"
                            Clicked="ActionButton02BClicked"
                            BackgroundColor="Transparent"
                            Grid.Column="1" Grid.Row="3" x:Name="ActionButton02B" IsVisible="false"/>
                <Button Text="Combattre"
                            FontFamily="PhiloR" TextColor="PowderBlue"
                            BackgroundColor="Transparent"
                            Clicked="ActionButton02CClicked"
                            Grid.Column="0" Grid.Row="3" x:Name="ActionButton02C" IsVisible="false"/>
                <Button Text="Partir sans rien dire"
                            FontFamily="PhiloR" TextColor="PowderBlue"
                            Clicked="ActionButton02DClicked"
                            BackgroundColor="Transparent"
                            Grid.Column="1" Grid.Row="3" x:Name="ActionButton02D" IsVisible="false"/>
                <!-- ******** Action 03 ******** 03-->
                <Button Text="Amadouer le jaguar"
                            FontFamily="PhiloR" TextColor="PowderBlue"
                            BackgroundColor="Transparent"
                            Clicked="Actionbutton03AClicked"
                            Grid.Column="0" Grid.Row="3" x:Name="ActionButton03A" IsVisible="false"/>
                <Button Text="Attaquer le jaguar"
                            FontFamily="PhiloR" TextColor="PowderBlue"
                            Clicked="ActionButton03BClicked"
                            BackgroundColor="Transparent"
                            Grid.Column="1" Grid.Row="3" x:Name="ActionButton03B" IsVisible="false"/>
                <Button Text="Retourner à la maison"
                            FontFamily="PhiloR" TextColor="PowderBlue"
                            BackgroundColor="Transparent"
                            Clicked="ActionButton03CClicked"
                            Grid.Column="0" Grid.Row="3" x:Name="ActionButton03C" IsVisible="false"/>
                <Button Text="Acheter du matériel"
                            FontFamily="PhiloR" TextColor="PowderBlue"
                            Clicked="Actionbutton03DClicked"
                            BackgroundColor="Transparent"
                            Grid.Column="1" Grid.Row="3" x:Name="ActionButton03D" IsVisible="false"/>
