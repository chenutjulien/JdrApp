                <StackLayout Grid.Column="0" Grid.Row="0"> <!-- Fiche du joueur coté gauche -->
                    <Label Text="PV: 0"
                           x:Name="StatutPv"
                           VerticalOptions="Start" 
                           HorizontalOptions="Start"
                           FontAttributes="Bold"
                           TextColor="PowderBlue"
                           FontSize="15"
                           FontFamily="PhiloBI"/>
                    <Label Text="Attaque: 0-0"
                           x:Name="StatutAttaque"
                           VerticalOptions="Start" 
                           HorizontalOptions="Start"
                           FontAttributes="Bold"
                           TextColor="PowderBlue"
                           FontSize="15"
                           FontFamily="PhiloBI"/>
                    <Label Text="Expérience"
                           x:Name="StatutExperience"
                           VerticalOptions="Start" 
                           HorizontalOptions="Start"
                           FontAttributes="Bold"
                           TextColor="PowderBlue"
                           FontSize="15"
                           FontFamily="PhiloBI"/>
                    <Label Text="Or: 0"
                           x:Name="StatutOr"
                           VerticalOptions="Start" 
                           HorizontalOptions="Start"
                           FontAttributes="Bold"
                           TextColor="PowderBlue"
                           FontSize="15"
                           FontFamily="PhiloBI"/>
                </StackLayout>
                <StackLayout Grid.Column="1" Grid.Row="0" Margin="5"> <!-- Fiche du joueur coté droit -->
                    <Label Text="Intelligence: 0"
                           x:Name="StatutIntelligence"
                           VerticalOptions="Start" 
                           HorizontalOptions="Start"
                           FontAttributes="Bold"
                           TextColor="PowderBlue"
                           FontSize="15"
                           FontFamily="PhiloBI"/>
                    <Label Text="Vivacité: 0"
                           x:Name="StatutVivacité"
                           VerticalOptions="Start" 
                           HorizontalOptions="Start"
                           FontAttributes="Bold"
                           TextColor="PowderBlue"
                           FontSize="15"
                           FontFamily="PhiloBI"/>
                    <Label Text="Niveau : 0"
                           x:Name="StatutNiveau"
                           VerticalOptions="Start" 
                           HorizontalOptions="Start"
                           FontAttributes="Bold"
                           TextColor="PowderBlue"
                           FontSize="15"
                           FontFamily="PhiloBI"/>
                    <Label Text="Potions: 0 / 0"
                           x:Name="StatutPotions"
                           VerticalOptions="Start" 
                           HorizontalOptions="Start"
                           FontAttributes="Bold"
                           TextColor="PowderBlue"
                           FontSize="15"
